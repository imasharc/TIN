<%-include('../../fragments/header.ejs') %>

	<main>
        <h2>Studios list</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Studio name</th>
                    <th>Street</th>
                    <th>Postal code</th>
                    <th>City</th>
                    <th>Hour rate</th>
                    <th>Contact</th>
                </tr>
            </thead>
            <tbody>
                <% for (let studio of studios) { %>
                    <tr>
                        <td><%= studio.name %></td>
                        <td><%= studio.street %></td>
                        <td><%= studio.postalCode %></td>
                        <td><%= studio.city %></td>
                        <td><%= studio.hourRate %></td>
                        <td><%= studio.contact %></td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="/studios/details/<%=studio.id%>" class="list-actions-button-details">Details</a>
                                </li>
                                <li>
                                    <a href="/studios/edit/<%=studio.id%>" class="list-actions-button-edit">Edit</a>
                                </li>
                                <li>
                                    <a href="/studios/delete/<%=studio.id%>" class="list-actions-button-delete">Delete</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <p><a href="/studios/add" class="button-add">Add new studio</a></p>
	
<%-include('../../fragments/footer.ejs') %>