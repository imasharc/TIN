<%-include('../../fragments/header.ejs') %>

	<main>
		<!-- <script type="application/javascript" src="/javascripts/validationCommon.js"></script> -->
		<script type="application/javascript" src="/javascripts/validationStudioForm.js"></script>
		<h2><%= pageTitle %></h2>
		<form class='form' method='post' action="<%=formAction%>" novalidate onsubmit="return validateForm();">
			<input type="hidden" name="id" value="<%= studio.id %>">

			<label for="name">Name: <span class="symbol-required">*</span></label>
			<input type="text" name="name" id="name" placeholder="2-50 characters" value="<%= studio.name %>"
				<%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
			<span id='errorName' class='errors-text'></span>

			<label for="street">Street: <span class="symbol-required">*</span></label>
			<input type="text" name="street" id="street" placeholder="2-50 characters" value="<%= studio.street %>"
			<%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
			<span id="errorStreet" class="errors-text"></span>
			
			<label for="postalCode">Postal Code: </label>
			<input type="text" name="postalCode" id="postalCode" placeholder="5-50 characters" value="<%= studio.postalCode %>"
			<%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
			<span id="errorPostalCode" class="errors-text"></span>

			<label for="city">City: </label>
			<input type="text" name="city" id="city" placeholder="5-50 characters" value="<%= studio.city %>"
			<%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
			<span id="errorCity" class="errors-text"></span>
			
			<label for="hourRate">Hour rate: <span class="symbol-required">*</span></label>
			<input type="number" name="hourRate" id="hourRate" value="<%= studio.hourRate %>"
				<%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
			<span id='errorHourRate' class='errors-text'></span>

			<label for="contact">Contact: <span class="symbol-required">*</span></label>
			<input type="text" name="contact" id="contact" placeholder="2-50 characters" value="<%= studio.contact %>"
				<%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
			<span id='errorContact' class='errors-text'></span>
		
			<% if (formMode == 'showDetails') { %>
                <div>
                    <a class="list-actions-button-edit" href="/studios/edit/<%= studio.id %>">Edit</a>
                </div>
            <% } %>
            
            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text"></p>
                <% if (formMode != 'showDetails') { %>
                    <input class="form-button-submit" type="submit" value="<%=btnLabel%>"/>
                    <a class="form-button-cancel" href="/studios">Cancel</a>
                <% } else { %>
                    <a class="form-button-cancel" href="/studios">Return</a>
                <% } %>
            </div>
		</form>


		<% if (formMode == 'showDetails' || formMode == 'edit') { %>
			<h2>Studio details</h2>

			<table class="table-list">
				<thead>
					<tr>
						<th>Engineer</th>
						<th>Start time</th>
						<th>End time</th>
						<th>Client first name</th>
						<th>Client last name</th>
						<th>Contact</th>
					</tr>
				</thead>
                <tbody>
				<% for (let s of studio.bookings) { %>
					<tr>
						<td><a href="/engineers/details/<%= s.engineer.id %>"><%= s.engineer.firstName %> <%= s.engineer.lastName %></a></td>
						<td><%= s.startTime.toLocaleDateString() %> <%= s.startTime.toTimeString().split(':00 GMT')[0] %></td>
						<td><%= s.endTime.toLocaleDateString() %> <%= s.endTime.toTimeString().split(':00 GMT')[0] %></td>
						<td><%= s.firstName %></td>
						<td><%= s.lastName %></td>
						<td><%= s.contact %></td>
					</tr>
				<% } %>
				</tbody>
            </table>
			<% } %>
		
	</main>
	
<%-include('../../fragments/footer.ejs') %>