<%-include('../../fragments/header.ejs') %>

	<main>
        <h2>Employee list</h2>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>URL</th>
                    <th>ISRC</th>
                </tr>
            </thead>
            <tbody>
                <% for (let song of songs) { %>
                    <tr>
                        <td><%= song.title %></td>
                        <td><a href="<%= song.url %>" target="_blank"><%= song.url %></a></td>
                        <td><%= song.isrc %></td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="/songs/details/<%=song.id%>" class="list-actions-button-details">Details</a>
                                </li>
                                <li>
                                    <a href="/songs/edit/<%=song.id%>" class="list-actions-button-edit">Edit</a>
                                </li>
                                <li>
                                    <a href="/songs/edit/<%=song.id%>" class="list-actions-button-delete">Delete</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <p><a href="/songs/add">Add new employee</a></p>
	
<%-include('../../fragments/footer.ejs') %>